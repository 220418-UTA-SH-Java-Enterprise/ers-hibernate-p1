<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
<servlet>
	<servlet-name>ERSController</servlet-name>
	<servlet-class>com.revature.web.ERSController</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>ERSController</servlet-name>
	
	<url-pattern>/login</url-pattern>

	<url-pattern>/registerUserRole</url-pattern>
	<url-pattern>/userRoles</url-pattern>
	<url-pattern>/userRole</url-pattern>
	<url-pattern>/updateUserRole</url-pattern>
	<url-pattern>/deleteUserRole</url-pattern>

	<url-pattern>/registerUser</url-pattern>
	<url-pattern>/users</url-pattern>
	<url-pattern>/user</url-pattern>
	<url-pattern>/updateUser</url-pattern>
	<url-pattern>/deleteUser</url-pattern>
	
	<url-pattern>/error</url-pattern>
	
</servlet-mapping>
<error-page>
	<error-code>404</error-code>
	<location>/error</location>
</error-page>
</web-app>